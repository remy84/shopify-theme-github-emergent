{% schema %}
{
  "name": "Bandeau d'annonce WHF",
  "settings": [
    { "type": "text", "id": "message_left", "label": "Message gauche", "default": "Offre de lancement" },
    { "type": "url", "id": "link_left", "label": "Lien gauche", "default": "/products/casquette-classique" },
    { "type": "text", "id": "message_right", "label": "Message droit", "default": "Obtiens 20% avec FAITH20" }
  ]
}
{% endschema %}

