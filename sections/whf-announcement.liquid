<div class="announcement-bar">
  <div class="container">
    {% if section.settings.message != blank %}
      <p>{{ section.settings.message }}</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "WE HAVE FAITH Annonce",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message d'annonce",
      "default": "✨ Nouvelle collection disponible • Livraison gratuite dès 100€"
    }
  ]
}
{% endschema %}