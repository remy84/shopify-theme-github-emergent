{% schema %}
{
  "name": "Bannière Notre histoire WHF",
  "settings": [
    {"type":"image_picker","id":"image_desktop","label":"Image desktop"},
    {"type":"image_picker","id":"image_mobile","label":"Image mobile"},
    {"type":"text","id":"heading","label":"Titre","default":"L'histoire de la marque"},
    {"type":"text","id":"subheading","label":"Sous-titre","default":"Confiance. Persévérance. Élégance."},
    {"type":"url","id":"link","label":"Lien","default":"/pages/brand-story"}
  ]
}
{% endschema %}

<a class="whf-hero" href="{{ section.settings.link }}">
  {% if section.settings.image_desktop %}
    <picture>
      {% if section.settings.image_desktop %}
        <source media="(min-width: 1024px)" srcset="{{ section.settings.image_desktop | img_url: '2000x' }}" />
      {% endif %}
      {% if section.settings.image_desktop %}
        <source media="(min-width: 768px)" srcset="{{ section.settings.image_desktop | img_url: '1600x' }}" />
      {% endif %}
      <img src="{% if section.settings.image_mobile %}{{ section.settings.image_mobile | img_url: '900x' }}{% else %}{{ section.settings.image_desktop | img_url: '900x' }}{% endif %}"
           alt="{{ section.settings.heading | escape }}"
           class="whf-hero__img" />
    </picture>
  {% endif %}
  <div class="whf-hero__overlay"></div>
  <div class="whf-hero__card">
    <h2 class="whf-hero__title">{{ section.settings.heading }}</h2>
    <p class="whf-hero__subtitle">{{ section.settings.subheading }}</p>
    <span class="whf-hero__cta">Découvrir</span>
  </div>
</a>