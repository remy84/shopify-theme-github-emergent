<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#0B0B0B">
  <link rel="canonical" href="{{ canonical_url }}">
  
  <title>{{ page_title }}{% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}</title>
  
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {{ content_for_header }}

  <!-- Charger le CSS principal -->
  {{ 'we-have-faith.css' | asset_url | stylesheet_tag }}
</head>

<body class="template-{{ template.name }}">
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <a href="{{ routes.root_url }}" class="logo">
          <img src="https://customer-assets.emergentagent.com/job_wehave-faith/artifacts/2mrqhg65_LOGO%20WHF%20BLANC.png" alt="{{ shop.name }}" />
          <span>WE HAVE FAITH</span>
        </a>
        <nav>
          <ul class="nav">
            <li><a href="{{ routes.root_url }}">Accueil</a></li>
            <li><a href="{{ collections['homme'].url }}">Homme</a></li>
            <li><a href="{{ collections['femme'].url }}">Femme</a></li>
            <li><a href="{{ collections['accessoires'].url }}">Accessoires</a></li>
            <li><a href="{{ pages['about'].url }}">À propos</a></li>
          </ul>
        </nav>
        <div class="nav-actions">
          <a href="{{ routes.search_url }}">🔍</a>
          <a href="{{ routes.account_url }}">👤</a>
          <a href="{{ routes.cart_url }}">🛒 ({{ cart.item_count }})</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main id="MainContent" class="content-for-layout" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-nav">
          <a href="{{ pages['politique-de-confidentialite'].url }}">Politique de confidentialité</a>
          <a href="{{ pages['mentions-legales'].url }}">Mentions légales</a>
          <a href="{{ pages['contact'].url }}">Contact</a>
        </div>
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Tous droits réservés.</p>
      </div>
    </div>
  </footer>
  {{ content_for_footer }}
</body>
</html>