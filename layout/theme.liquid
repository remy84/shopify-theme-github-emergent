<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#0B0B0B">
    <link rel="canonical" href="{{ canonical_url }}">
    
    <title>
      {{ page_title }}
      {%- unless page_title contains 'We Have Faith' %} &ndash; We Have Faith{% endunless -%}
    </title>
    
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    
    {{ content_for_header }}
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    {{ 'we-have-faith.css' | asset_url | stylesheet_tag }}

    <!-- Fallback CSS inline (au cas où l'asset ne se charge pas) -->
    <style>
      /* Fallback critique pour correspondre au site Emergent */
      :root { --bg: #0B0B0B; --text: #ffffff; --accent: #BFA05A; --accent-light: #F5EFE6; }
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: var(--bg); color: var(--text); line-height: 1.6; overflow-x: hidden; }
      .container { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
      .site-header { position: fixed; top: 0; left: 0; right: 0; z-index: 1000; background: rgba(11,11,11,0.95); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(255,255,255,0.1); height: 70px; }
      .announcement-bar { background: var(--accent); color: var(--bg); padding: 0.75rem 0; text-align: center; font-weight: 600; font-size: 0.9rem; }
      .hero { padding: 6rem 0 4rem; min-height: 80vh; display: flex; align-items: center; }
      .hero-title { font-size: 4.5rem; font-weight: 800; line-height: 1.05; margin-bottom: 2rem; letter-spacing: -0.02em; }
      .btn { display: inline-block; padding: 1rem 2rem; border-radius: 8px; font-weight: 600; text-decoration: none; transition: all 0.3s; border: none; cursor: pointer; font-size: 0.95rem; }
      .btn-primary { background: var(--accent); color: var(--bg); }
      .btn-primary:hover { background: #a68a4a; transform: translateY(-1px); }
    </style>
  </head>

  <body class="template-{{ template.name }}">
    <!-- Header -->
    <header class="site-header">
      <div style="max-width: 1400px; margin: 0 auto; padding: 0 1.5rem; display: flex; align-items: center; justify-content: space-between; height: 70px;">
        <a href="{{ routes.root_url }}" style="font-family: Montserrat, sans-serif; font-size: 1.5rem; font-weight: 600; color: white; text-decoration: none;">
          We Have Faith
        </a>
        
        <nav style="display: flex; align-items: center; gap: 2rem;">
          <a href="{{ routes.root_url }}" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">Accueil</a>
          {% assign homme = collections['homme'] | default: collections['Homme'] %}
          {% assign femme = collections['femme'] | default: collections['Femme'] %}
          {% assign enfant = collections['enfant'] | default: collections['Enfant'] %}
          <a href="{{ homme.url | default: '/collections/homme' }}" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">Homme</a>
          <a href="{{ femme.url | default: '/collections/femme' }}" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">Femme</a>
          <a href="{{ enfant.url | default: '/collections/enfant' }}" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">Enfant</a>
        </nav>
        
        <div style="display: flex; align-items: center; gap: 1rem;">
          <a href="/cart" style="color: rgba(255,255,255,0.8); text-decoration: none;">
            Panier ({{ cart.item_count }})
          </a>
        </div>
      </div>
    </header>

    <!-- Announcement Bar -->
    <div class="announcement-bar">
      Nouvelle collection disponible • Livraison gratuite dès 100€ • Retours sous 30 jours
    </div>

    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    <!-- Footer -->
    <footer style="background-color: rgba(11,11,11,0.8); border-top: 1px solid rgba(245,239,230,0.1); padding: 3rem 0; margin-top: 4rem; text-align: center; color: rgba(255,255,255,0.7);">
      <div style="max-width: 1400px; margin: 0 auto; padding: 0 1.5rem;">
        <div style="font-family: Montserrat, sans-serif; font-size: 1.5rem; font-weight: 600; color: white; margin-bottom: 2rem;">We Have Faith</div>
        <div style="display: flex; justify-content: center; gap: 2rem; margin-bottom: 2rem; flex-wrap: wrap;">
          <a href="/pages/politique-vie-privee" style="color: rgba(255,255,255,0.7); text-decoration: none; font-size: 0.9rem;">Politique de confidentialité</a>
          <a href="/pages/contact" style="color: rgba(255,255,255,0.7); text-decoration: none; font-size: 0.9rem;">Contact</a>
        </div>
        <div style="color: rgba(255,255,255,0.5); font-size: 0.85rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid rgba(245,239,230,0.1);">
          © {{ 'now' | date: "%Y" }} We Have Faith. Tous droits réservés.
        </div>
      </div>
    </footer>
  <!-- Cache refresh: 1755380169.583759 -->
  </body>
</html>