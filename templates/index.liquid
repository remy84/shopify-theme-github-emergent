<div class="container">
  <!-- Hero Section -->
  <section class="hero">
    <h1>Confiance. Persévérance. Élégance.</h1>
    <p>Des essentiels intemporels, pensés pour durer. Une signature minimaliste aux détails précis.</p>
    <a href="/collections/all" class="btn">Découvrir la collection</a>
  </section>

  <!-- Products Section -->
  <section>
    <h2 style="text-align: center; font-size: 2rem; margin: 3rem 0 2rem;">Nos produits</h2>
    <div class="products-grid">
      {% for product in collections.all.products limit: 8 %}
      <div class="product-card">
        <a href="{{ product.url }}">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}" class="product-image">
          {% else %}
            <div class="product-image" style="background: rgba(255,255,255,0.1); display: flex; align-items: center; justify-content: center;">
              <span>{{ product.title }}</span>
            </div>
          {% endif %}
          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            <p class="product-price">{{ product.price | money }}</p>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </section>
</div>